<!-- res/layout/activity_about_us.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:id="@+id/backbutton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layoutDirection="ltr">
        <ImageButton
            android:id="@+id/backabout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_back_24"
            />
        <TextView
            android:id="@+id/textbackabout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Back"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="top"
        android:layout_below="@id/backbutton"
        android:src="@drawable/logov1" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewLogo"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="About Us"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Welcome to our Missing Object Retrieval App! We understand how frustrating it can be to lose something important. Our mission is to help you find your lost items quickly and efficiently using our innovative technology. Whether it's a small keepsake or a vital document, we've got you covered."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewMission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescription"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Our Mission"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewMissionDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewMission"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="We are dedicated to leveraging the latest advancements in technology to provide an efficient and reliable service for retrieving lost objects. Our goal is to reunite people with their lost belongings as quickly as possible, minimizing the stress and inconvenience associated with losing important items."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewMissionDescription"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Contact Us: contact@missingobjectapp.com"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewSocialMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewContact"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Follow Us"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/socialMediaLinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSocialMedia"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonFacebook"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icons8_facebook_50"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Facebook" />

        <ImageButton
            android:id="@+id/buttonTwitter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icons8_x_50"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Twitter" />

        <ImageButton
            android:id="@+id/buttonInstagram"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/instagram50"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Instagram" />

    </LinearLayout>

</RelativeLayout>
